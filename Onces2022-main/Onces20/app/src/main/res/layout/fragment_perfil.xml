<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.fragments.PerfilFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/naranja_main"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/theme_gradients_background">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo_trans">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
            android:id="@+id/fotoperfil"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="280dp"
             android:src="@drawable/camara"
            android:background="@drawable/borde_redondo">
            </ImageView>
            <Button
            android:id="@+id/Btcamara"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="380dp"
            android:backgroundTint="@color/amarillo_main"
            android:text="Camara"
            android:textColor="@color/black"
            android:textStyle="bold">
            </Button>
            <Button
            android:id="@+id/Btgaleria"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="380dp"
            android:backgroundTint="@color/amarillo_main"
            android:textColor="@color/black"
            android:text="Galeria"
            android:textStyle="bold">
            </Button>
            <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="480dp"
            android:text="Nombre:"
            android:textSize="16dp"
            android:background="@drawable/borde_redondoblanco"
            android:textStyle="bold"
            android:layout_marginLeft="35dp">
            </TextView>
            <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="525dp"
            android:text="Correo:"
            android:textSize="16dp"
            android:background="@drawable/borde_redondoblanco"
            android:textStyle="bold"
            android:layout_marginLeft="35dp">
            </TextView>
            <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="570dp"
            android:text="Telefono:"
            android:textSize="16dp"
            android:background="@drawable/borde_redondoblanco"
            android:textStyle="bold"
            android:layout_marginLeft="35dp">
            </TextView>
            <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="615dp"
            android:text="Direccion:"
            android:textSize="16dp"
            android:background="@drawable/borde_redondoblanco"
            android:textStyle="bold"
            android:layout_marginLeft="35dp">
            </TextView>
        </RelativeLayout>
    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/buttonnavigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/amarillo_main"
        android:layout_marginTop="670dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_navigation_bar">
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</FrameLayout>