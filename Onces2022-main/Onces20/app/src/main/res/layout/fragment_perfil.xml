<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.fragments.PerfilFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/naranja_main"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/theme_gradients_background">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo_trans">
            </ImageView>
            <ImageView
                android:id="@+id/fotoperfil"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="80dp"
                android:layout_marginBottom="280dp"
                android:src="@drawable/camara">
            </ImageView>
            <Button
                android:id="@+id/Btcamara"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="380dp"
                android:backgroundTint="@color/amarillo_main"
                android:text="Camara"
                android:textStyle="bold">
            </Button>
            <Button
                android:id="@+id/Btgaleria"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="380dp"
                android:backgroundTint="@color/amarillo_main"
                android:text="Galeria"
                android:textStyle="bold">
            </Button>
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginTop="480dp"
                android:text="Nombre:"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="35dp">
            </TextView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginTop="520dp"
                android:text="Correo:"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="35dp">
            </TextView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginTop="560dp"
                android:text="Telefono:"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="35dp">
            </TextView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginTop="600dp"
                android:text="Direccion:"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="35dp">
            </TextView>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>