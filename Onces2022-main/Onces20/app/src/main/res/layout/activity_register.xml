<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/naranja_main"
    tools:context=".view.ui.activities.RegisterActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="420dp"
        android:layout_height="739dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondo_onces" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:fontFamily="@font/roboto_mono_medium_italic"
        android:text="Registro"
        android:textColor="#000000"
        android:textSize="48sp"
        android:textStyle="bold|italic"
        android:textAlignment="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.116" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginTop="530dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.734"
        app:srcCompat="@drawable/logo_trans" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="150dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/roboto_mono_bold"
            android:text="Usuario"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/UsuarioRegistro"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/borde_redondoblanco"
            android:hint="     digite su usuario"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/roboto_mono_bold"
            android:text="Contraseña"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ContrasenaRegistro"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/borde_redondoblanco"
            android:hint="     digite su contraseña"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/roboto_mono_bold"
            android:text="Email"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/CorreoRegistro"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/borde_redondoblanco"
            android:hint="     ingrese un email"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/roboto_mono_bold"
            android:text="Telefono"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/TelefonoRegistro"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/borde_redondoblanco"
            android:hint="     digite su telefono"
            android:textSize="20sp" />

        <Button
            android:id="@+id/BTregistrate"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="350dp"
            android:layout_marginBottom="166dp"
            android:background="@drawable/borde_redondo"
            android:fontFamily="@font/roboto_mono_bold_italic"
            android:text="Registrate"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:background="@drawable/borde_redondo"
            tools:fontFamily="@font/roboto_mono_bold_italic" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>